{
  "env": {
    "node": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "block-spacing": "error",
    "prefer-arrow-callback": "error",
    "arrow-parens": "error",
    "eqeqeq": "error",
    "@typescript-eslint/no-explicit-any": "off" // soon to be uncomment here
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "ignorePatterns": ["node_modules/**/*", "webpack.config.js", "src/data/**/*"],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint"
  ]
}